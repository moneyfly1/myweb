
# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=true

# 数据库配置（SQLite 默认）
DATABASE_URL=sqlite:///./cboard.db

# JWT 配置
SECRET_KEY=change-me-to-a-strong-random-32-bytes
API_V1_STR=/api/v1
PROJECT_NAME=CBoard Go
VERSION=1.0.0

# CORS（开发环境）
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# 邮件配置（如未使用可保留默认）
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your-email@qq.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=your-email@qq.com
SMTP_FROM_NAME=CBoard Modern
SMTP_ENCRYPTION=tls

# 上传与任务
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
DISABLE_SCHEDULE_TASKS=false
